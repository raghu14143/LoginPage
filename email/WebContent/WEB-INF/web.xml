  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>HomePageServlet</servlet-name>
  <servlet-class>com.jspiders.email.pkg1.HomePageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>HomePageServlet</servlet-name>
  <url-pattern>/HomePageServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>ComposeServlet</servlet-name>
  <servlet-class>com.jspiders.email.pkg1.ComposeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>ComposeServlet</servlet-name>
  <url-pattern>/compose</url-pattern>
  </servlet-mapping>
  
</web-app>